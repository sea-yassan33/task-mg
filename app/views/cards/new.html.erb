<div class="cardnewPage">
  <div class="container">
    <%= form_with model: @card,url: {action: :create}, html: {class: 'cardnewForm'}, local: true do |f| %>
      <%= f.hidden_field :list_id, value: @list.id %>
      <% if @card.errors.any? %>
        <p class="text-denger">タイトルは1-255文字以内</p>
      <% end %>
      <div class="cardnewForm_title">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'カード名' %>
      </div>
      <div class="cardnewForm_memo">
        <%= f.label :memo %>
        <%= f.text_field :memo, class: 'form-control', placeholder: '詳細' %>
      </div>
      <div class="text-center"><%= f.submit '作成', class: 'submitBtn' %></div>
    <% end %>
  </div>
</div>