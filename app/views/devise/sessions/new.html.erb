<div class="signinPage">
  <div class="container">
    <h2 class="title">サインイン</h2>
    <div class="text-center m-3">or</div>
    <div class="text-center"><%= render 'devise/shared/links'%></div>
    <%= form_with model: @user, url: user_session_path, class: 'mt-5 new_user', local: true do |f| %>
      <div class="form-group">
        <%= f.label :email %><br/>
        <%= f.email_field :email, class: 'form-control', placeholder: 'emailを入力', autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :password %><br/>
        <%= f.password_field :password, class: 'form-control', placeholder: 'passwordを入力' %>
      <div>
      <div class="form-group text-center">
        <%= f.submit 'sign-in', class: 'loginBtn' %>
      <div>
    <% end %>
  </div>
</div>